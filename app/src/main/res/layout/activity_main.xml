<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zrh.android.common.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="语言" />

        <Button
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列表" />

        <Button
            android:id="@+id/btnDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="弹窗" />

        <Button
            android:id="@+id/btnBottomDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="底部弹窗" />

        <Button
            android:id="@+id/btnBus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="事件总线" />

        <Button
            android:id="@+id/btnRedPacket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="红包雨" />

        <Button
            android:id="@+id/btnRedPacketPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="红包雨暂停/播放" />

        <TextView
            android:id="@+id/expandTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>