<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zrh.android.common.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvEnv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            tools:text="Env:"
            />

        <Button
            android:id="@+id/btnLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="语言" />

        <Button
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列表" />

        <Button
            android:id="@+id/btnDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="弹窗" />

        <Button
            android:id="@+id/btnBottomDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="底部弹窗" />

        <Button
            android:id="@+id/btnBus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="事件总线" />

        <Button
            android:id="@+id/btnRainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="红包雨" />

        <Button
            android:id="@+id/btnMarqueeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跑马灯" />

        <Button
            android:id="@+id/btnExpandText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="展开/收起文本" />

        <Button
            android:id="@+id/btnPhysicsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="物理盒子" />

        <Button
            android:id="@+id/btnHeartView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HeartView" />

        <Button
            android:id="@+id/btnWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Whatsapp" />

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download" />

        <Button
            android:id="@+id/btnScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ScrollView" />

        <Button
            android:id="@+id/btnSwitchEnv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="切换环境" />
    </LinearLayout>


</ScrollView>